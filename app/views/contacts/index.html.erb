<div class="container">
  <div class="search overflow-fix sticky-top sticky-top pt-3 pb-3">
      <%= form_with url: contacts_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "find contact"
        %>
        <%= submit_tag "Search", class: "btn btn-flat" %>
      <% end %>
  </div>
  <div class="container pl-2">
    <div class="list-contacts">
      <% @contacts.each do |contact| %>
        <%= link_to contact_path(contact), class:"contact-item" do %>
            <p><%= contact.title %></p>
        <% end %>
      <% end %>
      <div class="container text-center overflow-fix">
      <%= link_to "Add Contact", new_contact_path, class: "btn btn-add" %>
      </div>
    </div>
    <div style="height: 120px"></div>
  </div>
</div>
