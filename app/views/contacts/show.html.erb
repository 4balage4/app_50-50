<div class="container template-details-header">
  <h1>Contact details</h1>
</div>

<div class="container">
  <div class= "main-card">
    <div class="contact-name-card justify-content-center">
      <h4><%= @contact.title %></h4>
    </div>
    <div class="contact-details">
      <%= simple_form_for @contact do |f| %>
        <%= f.input :title %>
        <%= f.input :name %>
        <%= f.input :phone %>
        <%= f.input :address %>
        <div class="d-flex justify-content-center">
        <%= f.button :submit, class: "btn btn-add" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="bottom-buttons">
  <div class="bottom-icons">
    <%= link_to contact_path(@contact), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash"></i>
    <% end %>
    <a class="fa-solid fa-location-dot" href="https://www.google.at/maps/place/<%=@contact.address %>" target="blank"> </a>
    <%= link_to edit_contact_path do %>
    <i class="fa-solid fa-pen"></i>
    <% end %>
  </div>
</div>
