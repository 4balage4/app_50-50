<h2>your households tasks</h2>
<%= link_to "Add new", new_task_path %>

<div class="container">
  <div>
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
        <%= link_to task_path(task) do %>
        <li class="list-group-item">
        <strong><%= task.name %></strong> <%= task.household.name%> <strong><%= task.assigned_to.nil? ? "unassigned" : task.assigned_to.username %> </strong> </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
