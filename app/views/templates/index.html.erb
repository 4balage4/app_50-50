<div class="container welcome-message">
  <h1>My templates</h1>
</div>

<div class="container pl-2 overflow-fix">
  <div class="search overflow-fix sticky-top mt-3 pt-2">
    <%= form_with url: templates_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "find template"
      %>
      <%= submit_tag "Search", class: "btn btn-flat" %>
    <% end %>
  </div>
  <div>
    <% @templates.each do |template| %>
      <%= link_to template_path(template) do %>
        <%= render "template", template: template %>
      <% end %>
    <% end %>
  </div>
  <div class="text-center">
    <%= link_to "Add new", new_template_path, class: "btn btn-add" %>
  </div>
</div>
